@model web_blog.Models.PostViewModels.CreateViewModel

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Summernote with Bootstrap 4</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
</head>
<body>
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h5 class="breadcrumb-item active">
                        <a asp-controller="User" asp-action="Index">Dashboard</a>
                        <span class="breadcrumb-separator">/</span>
                        Create Post
                    </h5>
                </div>
            </div>
        </div>
    </section>
    <form id="createForm" asp-controller="User" asp-action="CreatePost" method="post" enctype="multipart/form-data">
        <input asp-for="Post.Id" readonly hidden />
        <div class="card-header">
            <i class="fas fa-pen-fancy mr-1"></i>
            Write a Post
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Category</label>
                <select class="form-control" id="formControlSelect1" name="categoryId">
                    <option value="">-- --</option>
                    @foreach (var item in (List<web_blog.Data.Category>)ViewBag.Categories)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span role="alert" id="selectError" aria-hidden="true"> Please select category </span>
            </div>
            <div class="form-group">
                <label asp-for="HeaderImage">File input</label>
                <div class="custom-file">
                    <input asp-for="HeaderImage" name="HeaderImage" class="custom-file-input" accept="image/*" id="InputFile">
                    <label class="custom-file-label" asp-for="HeaderImage">Choose file</label>
                    <span role="alert" id="fileError" aria-hidden="true"> Please choose file </span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Post.Title"></label>
                <input asp-for="Post.Title" class="form-control" id="title" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
                <span role="alert" id="titleError" aria-hidden="true"> Please enter title </span>
            </div>

            <div class="form-group">
                <label asp-for="Post.Content"></label>
                <textarea asp-for="Post.Content" class="form-control" name="Post.Content" id="summernote"></textarea>
                <span asp-validation-for="Post.Content" class="text-danger"></span>
                <span role="alert" id="contentError" aria-hidden="true"> Please enter content </span>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <p class="text-muted">Publish now or save for later edits.</p>
                <label>Publish now?</label>
                <input type="checkbox" data-toggle="toggle" asp-for="Post.Published">
                <br />
                <button class="btn btn-primary" type="submit" @*data-toggle="modal" data-target="#createPostModal"*@ id="submitPost">Submit</button>
            </div>
            <p style="color: orangered; margin-bottom: 0;">Please Note:</p>
            <p>Your post will need to be approved before it is published to the main page. Please feel free to email me to approve your post.</p>
        </div>
    </form>


    <!-- Modal -->
    <div class="modal fade" id="createPostModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Do you want to create a post?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" id="btnCreatePost">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <script>

        // editor
        $('#summernote').summernote({
            placeholder: 'Write content',
            tabsize: 2,
            height: 100
        });

        // input file
        document.getElementById("InputFile").addEventListener("change", function (e) {
            var fileName = e.target.files[0].name;
            var nextSibling = e.target.nextElementSibling;
            nextSibling.innerText = fileName;
        });

        // modal submit
        const submit = document.getElementById("submitPost");

        submit.addEventListener('click', function (e) {
            if (validate(e)) {
                $('#createPostModal').modal('show');

            }
        });

        $('#btnCreatePost').click(function () {
            $('#createForm').submit();
            $('#createPostModal').modal('hide');
        });

        function validate(e) {
            e.preventDefault();

            // select
            var selectedValue = document.getElementById('formControlSelect1').value;
            let valid = true;

            if (selectedValue === '') {
                const selectError = document.getElementById("selectError");
                selectError.classList.add("visible");
                selectError.setAttribute('aria-hidden', false);
                selectError.setAttribute('aria-invalid', true);

                valid = false;
            }

            // title
            const titleField = document.getElementById("title");


            if (!titleField.value) {
                const titleError = document.getElementById("titleError");
                titleError.classList.add("visible");
                titleField.classList.add("invalid");
                titleError.setAttribute('aria-hidden', false);
                titleError.setAttribute('aria-invalid', true);

                valid = false;
            }

            // file
            var inputFile = document.getElementById("InputFile").files.length;
            if (inputFile === 0) {
                const fileError = document.getElementById("fileError");
                fileError.classList.add("visible");
                inputFile.classList.add("invalid");
                fileError.setAttribute('aria-hidden', false);
                fileError.setAttribute('aria-invalid', true);

                valid = false;
            }


            // content
            var contentField = $($('#summernote').summernote('code')).text();
            if (contentField === '') {
                const contentError = document.getElementById("contentError");
                contentError.classList.add("visible");
                contentError.setAttribute('aria-hidden', false);
                contentError.setAttribute('aria-invalid', true);

                valid = false;
            }

            return valid;
        }

    </script>
</body>
</html>



